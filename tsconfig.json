{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@hris/types": ["./packages/types/src/index", "./packages/types/dist/index"],
      "@hris/utils": ["./packages/utils/src/index", "./packages/utils/dist/index"],
      "@hris/db": ["./packages/db/src/client", "./packages/db/dist/client"],
      "@hris/types/*": ["./packages/types/src/*", "./packages/types/dist/*"],
      "@hris/utils/*": ["./packages/utils/src/*", "./packages/utils/dist/*"],
      "@hris/db/*": ["./packages/db/src/*", "./packages/db/dist/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
