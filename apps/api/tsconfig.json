{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@hris/types": ["../../packages/types/src"],
      "@hris/types/*": ["../../packages/types/src/*"],
      "@hris/utils": ["../../packages/utils/src"],
      "@hris/utils/*": ["../../packages/utils/src/*"],
      "@hris/db": ["../../packages/db/src/client.ts"],
      "@hris/db/*": ["../../packages/db/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../../old files/**"
  ]
}

