{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@hris/types": ["../../packages/types/dist/index"],
      "@hris/types/*": ["../../packages/types/dist/*"],
      "@hris/utils": ["../../packages/utils/dist/index"],
      "@hris/utils/*": ["../../packages/utils/dist/*"],
      "@hris/db": ["../../packages/db/dist/client"],
      "@hris/db/*": ["../../packages/db/dist/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../../old files/**"
  ]
}

